<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/bg_main_baner" />

    <GridLayout
        android:id="@+id/gl_shangshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:padding="20dp"
        android:rowCount="2">

        <com.sogukj.pe.view.TipsView
            android:id="@+id/tv_sp"
            style="@style/ItemGridMain"
            android:drawableTop="@drawable/ic_main_sp"
            android:tag="volatility"
            android:text="审批" />

        <com.sogukj.pe.view.TipsView
            android:id="@+id/tv_zx"
            style="@style/ItemGridMain"
            android:drawableTop="@drawable/ic_main_zx"
            android:tag="companyInfo"
            android:text="资讯" />

        <com.sogukj.pe.view.TipsView
            android:id="@+id/tv_jj"
            style="@style/ItemGridMain"
            android:drawableTop="@drawable/ic_main_jj"
            android:tag="seniorExecutive"
            android:text="基金" />

        <com.sogukj.pe.view.TipsView
            android:id="@+id/tv_rl"
            style="@style/ItemGridMain"
            android:drawableTop="@drawable/ic_main_rl"
            android:tag="announcement"
            android:text="日历" />

        <com.sogukj.pe.view.TipsView
            android:id="@+id/tv_lxr"
            style="@style/ItemGridMain"
            android:drawableTop="@drawable/ic_main_lxr"
            android:tag="shareholder"
            android:text="联系人" />

        <com.sogukj.pe.view.TipsView
            android:id="@+id/tv_me"
            style="@style/ItemGridMain"
            android:drawableTop="@drawable/ic_main_me"
            android:tag="shareholder"
            android:text="我的" />

    </GridLayout>

</LinearLayout>