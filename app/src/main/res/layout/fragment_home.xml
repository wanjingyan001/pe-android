<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7f7f7">

    <ImageView
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/banner" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp">

                <ImageView
                    android:id="@+id/refresh"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="125dp"
                    android:alpha="0.5"
                    android:background="@drawable/refresh"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/iv_empty"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/img_empty1"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/refresh" />

                <com.fashare.stack_layout.StackLayout
                    android:id="@+id/stack_layout"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/refresh" />

                <ImageView
                    android:id="@+id/pb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:src="@drawable/loading"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/party_build"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_party_build">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/icon_party_build"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_party_build" />

                    <TextView
                        android:id="@+id/party_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/icon_party_build"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/icon_party_build"
                        android:text="党建专栏"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/party_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_party_build"
                        android:layout_alignLeft="@+id/party_title"
                        android:text="动态、活动、两学一做"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>


            </RelativeLayout>


            <android.support.v7.widget.GridLayout
                android:id="@+id/grid"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:columnCount="2"
                app:orientation="horizontal"
                app:rowCount="2">

                <com.sogukj.pe.view.TipsViewMain
                    android:id="@+id/tv_sp"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:bg="@drawable/ic_lxr"
                    app:icon_main="@drawable/ic_main_sp2"
                    app:layout_columnWeight="1"
                    app:sub_title="用印、签字、请假"
                    app:tag_text="3"
                    app:title="审批" />
                <!--app:icon_main="@drawable/ic_main_sp"-->
                <!--app:bg="@drawable/ic_sp"-->

                <com.sogukj.pe.view.TipsViewMain
                    android:id="@+id/tv_weekly"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:bg="@drawable/ic_lxr"
                    app:icon_main="@drawable/ic_main_rl2"
                    app:layout_columnWeight="1"
                    app:sub_title="员工周报"
                    app:tag_text="3"
                    app:title="周报" />
                <!--app:icon_main="@drawable/ic_main_rl"-->
                <!--app:bg="@drawable/ic_rl"-->

                <com.sogukj.pe.view.TipsViewMain
                    android:id="@+id/tv_msg"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:bg="@drawable/ic_lxr"
                    app:icon_main="@drawable/ic_main_msg1"
                    app:layout_columnWeight="1"
                    app:sub_title="IM、云秘、审批等"
                    app:tag_text="3"
                    app:title="消息" />

                <com.sogukj.pe.view.TipsViewMain
                    android:id="@+id/tv_rl"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    app:bg="@drawable/ic_lxr"
                    app:icon_main="@drawable/ic_main_weekly"
                    app:layout_columnWeight="1"
                    app:sub_title="日历、日程、会议"
                    app:tag_text="4"
                    app:title="安排" />
            </android.support.v7.widget.GridLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <!--<ProgressBar-->
    <!--android:id="@+id/pb"-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_gravity="center" />-->


</FrameLayout>