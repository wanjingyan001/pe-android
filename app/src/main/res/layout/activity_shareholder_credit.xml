<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider2"
    android:orientation="vertical"
    tools:context="com.sogukj.pe.ui.project.ShareholderCreditActivity">

    <include layout="@layout/layout_shareholder_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:textColor="@color/text_1"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/directors"
                style="@style/fund_small_blue_tv"
                android:layout_marginLeft="20dp"
                android:text="董监高" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/directorsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fastScrollEnabled="false"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="5dp"
                tools:targetApi="lollipop">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/shareholder"
                style="@style/fund_small_blue_tv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="股东" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/shareholderList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="5dp"
                tools:targetApi="lollipop">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/inquireBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_btn_selector"
                android:padding="15dp"
                android:text="一键查询" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
