<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_list"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/text_1"
        android:textSize="16sp"
        tools:text="@string/tools_text_long_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/icon_date"
            android:drawablePadding="4dp"
            android:textColor="@color/text_3"
            android:textSize="12sp"
            tools:text="2017/07/07" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_time"
            android:drawablePadding="4dp"
            android:textColor="@color/text_3"
            android:textSize="12sp"
            tools:text="12:00" />

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_3"
            android:textSize="12sp"
            tools:text="人民日报" />
    </LinearLayout>

    <com.sogukj.pe.view.FlowLayout
        android:id="@+id/tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/item_tag_news" />

        <include layout="@layout/item_tag_news" />

        <include layout="@layout/item_tag_news" />

        <include layout="@layout/item_tag_news" />

    </com.sogukj.pe.view.FlowLayout>
</LinearLayout>