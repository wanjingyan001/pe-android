<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorHint">@color/text_3</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <declare-styleable name="ProgressLayout">
        <attr name="progressBackground" format="color" />
        <attr name="progress_progress" format="boolean" />
        <attr name="errorColor" format="color" />
        <attr name="errorGravity" format="reference" />
    </declare-styleable>

    <style name="SoguDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowBackground">@android:color/transparent</item><!-- //设置背景 -->
        <item name="android:windowFrame">@null</item><!-- //去掉边框 -->
        <item name="android:backgroundDimEnabled">true</item><!-- //设置是否背景模糊 -->
        <item name="android:windowIsTranslucent">true</item><!-- //设置半透明 -->
        <item name="android:windowNoTitle">true</item><!-- //设置无标题 -->
        <item name="android:windowFullscreen">false</item>
        <!--  <item name="android:backgroundDimEnabled">false</item> -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SoguTextTitle">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SoguTextTitle2">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SoguTextEffectDist">
        <item name="android:textSize">@dimen/text_size_samll</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextNormal">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextSamll">
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">@dimen/text_size_samll</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextMedium">
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="SoguTextLarge">
        <item name="android:alpha">1.0</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="ItemGridProject">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_1</item>
        <item name="android:layout_columnWeight" tools:ignore="NewApi">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>
